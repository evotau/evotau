{
  "compilerOptions": {
    "target": "ES2022", 
    "module": "ESNext", 
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist", 
    "rootDir": ".", 
    "sourceMap": true 
  },
  "include": [
    "src/**/*.ts", 
    "src/template/**/*" 
  ],
  "exclude": [
    "node_modules"
  ]
}
